            compatible = "zmk,combos";
            combo_esc {
                timeout-ms = <50>;
                key-positions = <0 1>;
                bindings = <&kp ESC>;
            };
			
			combo_space {
				timeout-ms = <50>;
				key-positions = <11 12 13>;
				bindings = <&kp SPACE>;
			};
			
			combo_enter {
				timeout-ms = <50>;
				key-positions = <10 11 12>;
				bindings = <&kp RET>;
			};

    };

