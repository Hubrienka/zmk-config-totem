&mt {
  quick-tap-ms = <180>;
  flavor = "hold-preferred";
  tapping-term-ms = <160>;
};

&lt {
  quick-tap-ms = <180>;
  flavor = "balanced";
  tapping-term-ms = <160>;
};

/ {
    behaviors {
		ralt_repeat: ralt_repeat {
			compatible = "zmk,behavior-hold-tap";
			#binding-cells = <2>;
			tapping-term-ms = <160>;
			flavor = "balanced";
			bindings = <&kp>, <&key_repeat>;
		};
    };

